{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "types": ["jest"],
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.tsx","src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts",  "jest.config.ts"]
}